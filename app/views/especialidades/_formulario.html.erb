	<table>
		<tr>
			<th><%= f.label :clave %></th>
			<td>
				<%=f.hidden_field :id %>
				<%= f.text_field :clave %>
				
			</td>
		</tr>
		<tr>
			<th><%= f.label 'Nombre' %></th>
			<td><%= f.text_field :nombre %></td>
		</tr>
		<tr>
			<th><%= f.label 'Descripcion' %></th>
			<td><%= f.text_field :descripcion %></td>
		</tr>
		<tr>
			<th><%= f.label 'Carrera' %></th>
			<td><%= f.select :carrera_id, @carreras.collect{|e| [e.nombre,e.descripcion]}, {include_blank: "Selecciona uno."} %></td>
		</tr>		
		<tr>
			<th></th>
			<td><%= f.submit "Guardar"%></td>
		</tr>		
	</table>