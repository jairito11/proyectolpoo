<p id="notice"><%= notice %></p>

<div class="container">
<div class="col-sm-10 col-sm offset-1">
  <h1 class="text-center">Carreras</h1>
<table class="bg-info rounded">
  <thead>
    <tr>
      <th class="form-group">Clave</th>
      <th class="form-group">Nombre</th>
      <th class="form-group">Descripcion</th>
      <th class="form-group">Campus</th>
      <th class="form-group">Municipio</th>
      <th class="form-group">Estado</th>
      <th class="form-group">Pais</th>
      <th class="form-group">Coordinador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= carrera.clave %></td>
        <td><%= carrera.nombre %></td>
        <td><%= carrera.descripcion %></td>
        <td><%= carrera.campus %></td>
        <td><%= carrera.municipio %></td>
        <td><%= carrera.estado %></td>
        <td><%= carrera.pais %></td>
        <td><%= carrera.coordinador.nombre+' '+carrera.coordinador.paterno %></td>
        <td><%= link_to 'Mostrar', carrera, :class => "btn bg-success text-white rounded" %></td>
        <td><%= link_to 'Editar', edit_carrera_path(carrera), :class => "btn bg-success text-white rounded" %></td>
        <td><%= link_to 'Eliminar', carrera, method: :delete, data: { confirm: '¿Estás seguro?' }, :class => "btn bg-success text-white rounded" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

