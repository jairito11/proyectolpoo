<p id="notice"><%= notice %></p>

<h1>Carreras</h1>

<table>
  <thead>
    <tr>
      <th>Clave</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Campus</th>
      <th>Municipio</th>
      <th>Estado</th>
      <th>Pais</th>
      <th>Coordinador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= carrera.clave %></td>
        <td><%= carrera.nombre %></td>
        <td><%= carrera.descripcion %></td>
        <td><%= carrera.campus %></td>
        <td><%= carrera.municipio %></td>
        <td><%= carrera.estado %></td>
        <td><%= carrera.pais %></td>
        <td><%= carrera.coordinador.nombre+' '+carrera.coordinador.paterno %></td>
        <td><%= link_to 'Mostrar', carrera %></td>
        <td><%= link_to 'Editar', Editar_carrera_path(carrera) %></td>
        <td><%= link_to 'Eliminar', carrera, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

