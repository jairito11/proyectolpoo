<p id="notice"><%= notice %></p>

<h1>Idiomas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Region</th>
      <th>Hablantes</th>
      <th>Puesto</th>
      <th>Familia</th>
      <th>Dialectos</th>
      <th>Escritura</th>
      <th>Asociacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @idiomas.each do |idioma| %>
      <tr>
        <td><%= idioma.nombre %></td>
        <td><%= idioma.region %></td>
        <td><%= idioma.hablantes %></td>
        <td><%= idioma.puesto %></td>
        <td><%= idioma.familia %></td>
        <td><%= idioma.dialectos %></td>
        <td><%= idioma.escritura %></td>
        <td><%= idioma.asociacion.acronimo %></td>
        <td><%= link_to 'Mostrar', idioma %></td>
        <td><%= link_to 'Editar', edit_idioma_path(idioma) %></td>
        <td><%= link_to 'Eliminar', idioma, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Idioma', new_idioma_path %>
