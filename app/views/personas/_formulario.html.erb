	<table>
		<tr>
			<th><%= f.label :curp %></th>
			<td>
				<%=f.hidden_field :id %>
				<%= f.text_field :curp %>
				
			</td>
		</tr>
		<tr>
			<th><%= f.label 'Nombre' %></th>
			<td><%= f.text_field :nombre %></td>
		</tr>
		<tr>
			<th><%= f.label 'Paterno' %></th>
			<td><%= f.text_field :paterno %></td>
		</tr>
		<tr>
			<th><%= f.label 'Materno' %></th>
			<td><%= f.text_field :materno %></td>
		</tr>
		<tr>
			<th><%= f.label 'Sexo' %></th>
			<td><%= f.text_field :sexo %></td>
		</tr>
		<tr>
			<th><%= f.label 'Telefono' %></th>
			<td><%= f.text_field :telefono %></td>
		</tr>
		<tr>
			<th><%= f.label 'Dirección' %></th>
			<td><%= f.text_field :direccion %></td>
		</tr>
		<tr>
			<th><%= f.label 'Contraseña' %></th>
			<td><%= f.password_field :password_digest %></td>
		</tr>
		<tr>
			<th><%= f.label 'Rol' %></th>
			<td><%= f.select :rol_id, @roles.collect{|e| [e.rol,e.id]}, {include_blank: "Selecciona uno."} %></td>
		</tr>
		<tr>
			<th><%= f.label 'Especialidad' %></th>
			<td><%= f.select :especialidad_id, @especialidades.collect{|e| [e.nombre,e.id]}, {include_blank: "Selecciona uno."} %></td>
		</tr>
		
		<tr>
			<th></th>
			<td><%= f.submit "Guardar"%></td>
		</tr>		
	</table>