<p id="notice"><%= notice %></p>

<div class="container">
<div class="col-sm-10 col-sm offset-1">
  <h1 class="text-center">Editoriales</h1>
<table class="bg-info rounded">
  <thead>
    <tr>
      <th class="form-group">Nombre</th>
      <th class="form-group">Tipo</th>
      <th class="form-group">Isin</th>
      <th class="form-group">Industria</th>
      <th class="form-group">Formalegal</th>
      <th class="form-group">Fundador</th>
      <th class="form-group">Sede</th>
      <th class="form-group">Fundacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editoriales.each do |editorial| %>
      <tr>
        <td><%= editorial.nombre %></td>
        <td><%= editorial.tipo %></td>
        <td><%= editorial.isin %></td>
        <td><%= editorial.industria %></td>
        <td><%= editorial.formaLegal %></td>
        <td><%= editorial.fundador %></td>
        <td><%= editorial.sede %></td>
        <td><%= editorial.fundacion %></td>
        <td><%= link_to 'Mostrar', editorial, :class => "btn bg-success text-white rounded"%></td>
        <td><%= link_to 'Editar', edit_editorial_path(editorial), :class => "btn bg-success text-white rounded"%></td>
        <td><%= link_to 'Eliminar', editorial, method: :delete, data: { confirm: '¿Estás seguro?' }, :class => "btn bg-success text-white rounded"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'Nueva Editorial', new_editorial_path %>
